<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="eventlog" type="log4net.Appender.EventLogAppender" >
    <applicationName value="mySafety Campaign Manager" />
    <logName value="Application" />

    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%date{HH:mm:ss,ffffff}] [%thread] %-5level %logger [%ndc] - %message%newline---------------%newline%exception" />
    </layout>

    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="INFO" />
    </filter>
    <filter type="log4net.Filter.DenyAllFilter" />
  </appender>

  <appender name="file" type="log4net.Appender.RollingFileAppender">
    <file value="logs\ilaro_admin.log" />
    <appendToFile value="true" />
    <rollingStyle value="Date" />
    <datePattern value="yyyyMMdd" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>

    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="INFO" />
    </filter>
    <filter type="log4net.Filter.DenyAllFilter" />
  </appender>

  <appender name="debugging" type="log4net.Appender.RollingFileAppender">
    <file value="logs\ilaro_admin.debug.log" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <maximumFileSize value="5000KB" />
    <maxSizeRollBackups value="-1" />
    <datePattern value="yyyyMMdd" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
    </layout>

    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="DEBUG" />
    </filter>
    <filter type="log4net.Filter.DenyAllFilter" />
  </appender>

  <root>
    <level value="WARN" />
    <appender-ref ref="file" />
    <appender-ref ref="debugging" />
  </root>
</log4net>